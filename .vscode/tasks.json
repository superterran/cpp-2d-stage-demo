{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "build",
        "command": "/usr/bin/g++",
        "args": ["${workspaceFolder}/src/*.cpp", "-lyaml-cpp", "-lSDL2", "-lSDL2_image", "-I${workspaceFolder}/headers", "-I${workspaceFolder}/src", "-o", "${workspaceFolder}/bin/fantasy-debug", "-g"],
        "options": {
          "cwd": "/usr/bin"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }

  